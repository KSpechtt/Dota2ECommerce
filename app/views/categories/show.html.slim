nav.breadcrumb.is-small aria-label="breadcrumbs"
  ul
    li
      = link_to 'Home', root_path
    li
      = link_to 'Categories', categories_path
    li.is-active
      |   
      | #{@categories.category_name}
.columns.is-multiline
  = render partial: 'items/item',
    collection: @items,
    locals: { name_is_link: true }
= paginate @items

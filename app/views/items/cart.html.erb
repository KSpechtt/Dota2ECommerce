<nav class="breadcrumb is-small" aria-label="breadcrumbs">
    <ul>
        <li>
            <%=link_to 'Home', root_path %>
        </li>
        <li>
            <%=link_to 'Store', items_path %>
        </li>
        <li class="is-active">&#160;&#160;
            <p>Cart</p>
        </li>
    </ul>

    <br>

    <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
</nav>

<%if @cart.empty? %>
    <div class="container">
    <div >
        <h1 class="title">Shopping Cart</h1>

        <p>Your shopping cart is currently empty. Please check out our <%=link_to 'store to add items', items_path%></p>

    </div>
</div>
<%else%>
<h1 class="title">Shopping Cart</h1>

 <div class="columns is-multiline">
        <%@cart.each do |item| %>
          <div class="column is-2">
              <div class="card">
                  <div class="card-image">
                      <figure class="image is-4by3">
                          <%= image_tag item.image, alt: item.name %>
                      </figure>
                  </div>
                  <div class="card-content">
                      <div class="media">
                          <div class="media-content">
                              <p class="title is-4">
                                  <%= link_to item.name, item %>
                              </p>
                              <p class="subtitle is-6">
                                  <%=number_to_currency item.cost %>
                              </p>
                               <p class="subtitle is-6">
                                  <%=@item_quantity %>
                              </p>
                          </div>
                      </div>
                      <%= form_tag(cart_items_path, :method => "get") do %>
                          <p> <%= link_to "Remove from Cart", remove_from_cart_path(item), method: :delete, class:"button is-info" %> </p>
                      <%end%>
                  </div>
              </div>
          </div>

        <%end%>
                  </div>
<%end%>

